<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		
		android:fitsSystemWindows="false"
		android:label="@string/title_activity_bluetooth_connect"
		tools:context="com.sharpangel.rgb_led.BluetoothConnect">
	
	<Button
			android:id="@+id/bluetooth_refresh"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			android:text="@string/yenile"
			app:layout_constraintBottom_toBottomOf="parent"
			android:layout_marginBottom="16dp"
			app:layout_constraintHorizontal_bias="1.0"/>
	
	<ListView
			android:id="@+id/bluetooth_devices"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			
			android:layout_marginBottom="16dp"
			app:layout_constraintBottom_toTopOf="@+id/bluetooth_refresh"
			app:layout_constraintTop_toTopOf="parent"
			tools:layout_editor_absoluteX="0dp" />


</android.support.constraint.ConstraintLayout>